@model PlinePager.Models.Users.UserManagementCreate


<div class="row">
    <div class="col-8 offset-2">
        <h3>ایجاد کاربر جدید</h3>
        <hr/>
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="form-control"/>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="form-group mt-3">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="form-control"/>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="form-group mt-3">
                        <label asp-for="Department" class="form-label"></label>
                        <input asp-for="Department" class="form-control"/>
                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="form-group mt-3">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" class="form-control" autocomplete="off"/>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="form-group mt-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" autocomplete="off"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="form-group mt-3">
                        <label asp-for="RepPassword" class="form-label"></label>
                        <input asp-for="RepPassword" class="form-control" autocomplete="off"/>
                        <span asp-validation-for="RepPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="form-group mt-3">
                        <input asp-for="UserChanePassword"/>
                        <label asp-for="UserChanePassword" class="form-label"></label>
                        <span asp-validation-for="UserChanePassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="ایجاد کاربر" class="btn btn-success"/>
                <a class="btn btn-danger" asp-action="Index">بازگشت</a>
            </div>
        </form>
    </div>
</div>